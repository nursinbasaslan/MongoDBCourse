                                totalEarn:{$sum:"$earn"}}},
                {$addFields:{netBalance:{$add:["$totalExpense","$totalEarn"]}}},
                {$sort:{"netBalance":-1}},
                {$project:{"_id":0,"expense":0,"earn":0}}
              ];
db.accounting.aggregate(pipeline);


