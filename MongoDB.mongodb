var pipeline = [{$addFields:{totalExpense:{$sum:"$expense"}, 
                                totalEarn:{$sum:"$earn"}}},
                {$addFields:{netBalance:{$add:["$totalExpense","$totalEarn"]}}},
                {$sort:{"netBalance":-1}}
              ];
